@model IEnumerable<CurricullumVitae.Models.Document>

@{
    ViewData["Title"] = "Index";
}

<div>
    <h4>My Curriculum Vitae</h4>
    <hr />

    @foreach (var item in Model)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.Description)
            </dt>
            <dd class="col-sm-10">
                <p>@item.Description</p>
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-area="" asp-controller="Document" asp-action="Create">Create</a>
</div>
