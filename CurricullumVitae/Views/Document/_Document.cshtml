@model CurricullumVitae.ViewModels.DocumentViewModel

<h4>DocumentViewModel</h4>
<hr />
<div class="row">

    <div class="col-md-8">
        <form asp-action="_Document" id="documentForm" method="post" data-ajax="true" data-ajax-method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Summary</label>
                @Html.TextAreaFor(model=>model.Description,10,20,new{@class= "form-control"})
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
